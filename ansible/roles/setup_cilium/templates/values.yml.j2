k8sServiceHost: {{ setupinfos.lb_vip }}
k8sServicePort: 6443

kubeProxyReplacement: true

l2announcements:
  enabled: false

externalIPs:
  enabled: false

k8sClientRateLimit:
  qps: 50
  burst: 200

operator:
  replicas: 2
  rollOutPods: true

rollOutCiliumPods: true

ingressController:
  defaultSecretNamespace: {{ setupinfos.k3s.cilium_ingress_sec_ns }}
  defaultSecretName: {{ setupinfos.k3s.cilium_ingress_cert }}
  enabled: false
  default: false
  loadbalancerMode: shared
  service:
    annotations:
      io.cilium/lb-ipam-ips: {{ setupinfos.k3s.cilium_ingress_ip }}
