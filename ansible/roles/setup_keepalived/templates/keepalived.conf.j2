global_defs {
  enable_script_security
  script_user root
}

vrrp_script chk_haproxy {
  script       "/etc/haproxy/kd_haproxy.sh"
  interval 2   # check every 2 seconds
  fall 2       # require 2 failures for KO
  rise 2       # require 2 successes for OK
  user root
}

vrrp_instance LB_HA {
    state MASTER
    interface eth0
    virtual_router_id 101
    priority {{ hostinfos[ansible_mutated_host].kd_prio }}
    advert_int 1
    track_script {
      chk_haproxy
    }
    virtual_ipaddress {
        {{ setupinfos.lb_vip }}
    }
}
